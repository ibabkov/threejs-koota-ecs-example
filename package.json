{
  "name": "threejs-koota-ecs-example",
  "version": "1.0.0",
  "description": "Three.js + Koota ECS example",
  "source": "src/index.html",
  "scripts": {
    "start": "parcel index.html",
    "build": "parcel build index.html --public-url ./",
    "benchmark:setup": "npx playwright install && npx playwright install-deps",
    "benchmark:start": "npx playwright test src/benchmark/benchmark.spec.ts",
    "benchmark": "concurrently --no-persist --kill-others --success first 'npm run start' 'wait-on http://localhost:1234 && npm run benchmark:start'"
  },
  "dependencies": {
    "three": "0.181.0",
    "koota": "0.5.1",
    "stats.js": "^0.17.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "@types/stats.js": "^0.17.4",
    "@types/three": "0.181.0",
    "concurrently": "^9.2.1",
    "parcel": "^2.14.0",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  }
}